<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/"><i class="fas fa-angle-double-left"></i> Tüm Kullanıcılar</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Güncelle</h2>
            <span class="text-light"></span>
        </div>

        <!-- add user form -->
       <!-- form handling -->
       <form method="POST" id="update_user">
        <div class="new_user">
            <div class="form-group">
                <label for="name" class="text-light">İsim</label>
                <input type="hidden" name="id" value="<%= user._id %>">
                <input type="text" name="name" value="<%= user.name %>" placeholder="isim">
            </div>
            <div class="form-group">
                <label for="Email" class="text-light">Email</label>
                <input type="text" name="email" value="<%= user.email%>" placeholder="example@gmail.com">
            </div>
            <div class="form-group">
                <label for="gender" class="text-light">Cinsiyet</label>
                <div class="radio inline">
                    <input type="radio" id="radio-2" name="gender" value="Erkek" <%= user.gender == 'Erkek' ? 'checked' : '' %>>
                    <label for="radio-2" class="radio-label">Erkek</label>
                </div>
                <div class="radio inline">
                    <input type="radio" id="radio-3" name="gender" value="Kadın"  <%= user.gender == 'Kadın' ? 'checked' : '' %> >
                    <label for="radio-3" class="radio-label">Kadın</label>
                </div>
            </div>
    
            <div class="form-group">
                <label for="gender" class="text-light">Statü</label>
                <div class="radio inline">
                    <input type="radio" id="radio-4" name="status" value="Active" <%= user.status == 'Active' ? 'checked' : '' %> >
                    <label for="radio-4" class="radio-label">Aktif</label>
                </div>
                <div class="radio inline">
                    <input type="radio" id="radio-5" name="status" value="Inactive" <%= user.status == 'Inactive' ? 'checked' : '' %> >
                    <label for="radio-5" class="radio-label">Offline</label>
                </div>
            </div>
    
            <div class="form-group">
                <button type="submit" class="btn text-dark update">Güncelle</button>
            </div>
    
        </div>
    </form>
    </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->